{% extends 'base_without_topbar.html.twig' %}

{% block title %}S'enregistrer {{ parent() }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-md shadow-lg w-full max-w-md">
            <h1 class="text-xl font-bold text-center text-gray-700 mb-6">SPENDING WISE</h1>

            {{ form_start(registrationForm) }}

            <div class="space-y-4">
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-gray-600'}}) }}
                    {{ form_widget(registrationForm.email, {attr: {class: 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-gray-600'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {attr: {class: 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {attr: {class: 'h-4 w-4 border-gray-300 rounded-md'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-600'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="mt-6">
                    <button type="submit" class="w-full bg-secondary text-white p-3 rounded-md hover:bg-secondary-hover">
                        Register
                    </button>
                </div>
            </div>

            <div class="mt-4 flex justify-end">
                <a href="{{ path('app_login') }}" class="text-sm text-gray-600 hover:underline">Already have an account? Login</a>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
