{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="min-h-screen mx-auto p-4 flex justify-center items-center">
        <div>
            <h1 class="text-xl font-bold mb-4">S'enregistrer</h1>

            {{ form_start(registrationForm) }}

            <div class="space-y-4">
                <div>
                    {{ form_row(registrationForm.email, {attr: {class: 'w-full p-2 border rounded'}}) }}
                </div>
                <div>
                    {{ form_row(registrationForm.plainPassword, {attr: {class: 'w-full p-2 border rounded'}}) }}
                </div>
                <div>
                    <div class="inline-flex flex-row-reverse">
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </div>

            <div class="mt-4">
                <twig:Button type="submit" color="primary" size="md" fullWidth="true">Soumettre</twig:Button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
