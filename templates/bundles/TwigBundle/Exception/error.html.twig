{% extends 'base.html.twig' %}

{% block title %}An Error Occurred {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen">
        <div class="text-center bg-accent p-6 rounded-md shadow-md w-full max-w-md">
            <h1 class="text-6xl font-bold text-red-600 mb-4">{{ status_code }}</h1>
            <p class="text-2xl mb-4">An error occurred: {{ status_text }}</p>
            <p class="text-lg mb-4">
                We encountered an unexpected problem. Please try again later or contact support if the problem persists.
            </p>

            <a href="{{ path('account_list') }}" class="text-center font-bold bg-primary hover:bg-primary-hover text-white py-2 px-4 rounded-md">
                Return to homepage
            </a>
        </div>
    </div>
{% endblock %}
