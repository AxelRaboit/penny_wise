{% extends 'base_no_topbar.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center">
        <h1 class="text-xl font-bold text-center text-white mb-4">Reset Your Password</h1>
        <div class="bg-tertiary p-8 rounded-md shadow-lg w-full max-w-md">

            {{ form_start(resetForm) }}

            <div class="space-y-4">
                <div>
                    {{ form_label(resetForm.plainPassword.first, null, {label_attr: {class: 'block text-white text-sm'}}) }}
                    {{ form_widget(resetForm.plainPassword.first, {attr: {class: 'w-full p-3 bg-secondary border-quaternary border-solid border rounded-md text-white text-sm'}}) }}
                    <div class="text-danger text-sm mt-1">
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>
                </div>

                <div>
                    {{ form_label(resetForm.plainPassword.second, null, {label_attr: {class: 'block text-white text-sm'}}) }}
                    {{ form_widget(resetForm.plainPassword.second, {attr: {class: 'w-full p-3 bg-secondary border-quaternary border-solid border rounded-md text-white text-sm'}}) }}
                    <div class="text-danger text-sm mt-1">
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>
                </div>

                <div>
                    <twig:Cta
                        color="accent-primary"
                        size="sm"
                        label="Reset Password"
                        buttonType="submit"
                        fullWidth="true"
                        extraClasses="p-3"
                    />
                </div>
            </div>

            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
