{% extends 'base.html.twig' %}

{% block title %}Conversation with {{ participant.messenger.user.username }} - {{ parent() }}{% endblock %}

{% block body %}
    <div id="messenger-talk-view-page" class="hidden flex-1 overflow-hidden h-full">
        <div class="w-1/6 bg-secondary h-full flex flex-col">
            <h2 class="text-lg font-semibold text-dynamic">Messenger</h2>
            <div class="overflow-y-auto flex-1 mt-2">
                <ul>
                    {% for talk in talks %}
                        {% set sidebarParticipant = talk.participants|filter(p => p.messenger.user != app.user)|first %}
                        <li class="mr-2 p-2 hover:bg-primary cursor-pointer rounded-md">
                            <a href="{{ path('messenger_talk_view', {id: talk.id}) }}" class="flex items-center space-x-3 text-dynamic">
                                <img src="{% if sidebarParticipant.messenger.user.userInformation and sidebarParticipant.messenger.user.userInformation.avatarName %}
                                    {{ asset('uploads/avatars/' ~ sidebarParticipant.messenger.user.userInformation.avatarName) }}
                                {% else %}
                                    {{ asset('media/logo.png') }}
                                {% endif %}"
                                     alt="Avatar" class="w-8 h-8 rounded-full">
                                <span class="text-sm">{{ sidebarParticipant.messenger.user.username }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="flex-1 flex flex-col bg-tertiary rounded-md h-full">
            <div class="flex items-center space-x-4 border-b border-quaternary p-4">
                <img src="{% if participant.messenger.user.userInformation and participant.messenger.user.userInformation.avatarName %}
                    {{ asset('uploads/avatars/' ~ participant.messenger.user.userInformation.avatarName) }}
                {% else %}
                    {{ asset('media/logo.png') }}
                {% endif %}"
                     alt="Avatar" class="w-16 h-16 rounded-full">

                <div>
                    <h1 class="text-lg font-semibold text-dynamic">{{ participant.messenger.user.username }}</h1>
                    <twig:Cta
                        color="accent-primary"
                        size="xs"
                        label="See profile"
                        title="See profile"
                        route="profile_view"
                        :routeParams="{ username: participant.messenger.user.username }"
                    />
                </div>
            </div>

            <div id="js-messenger-messages-container" class="flex-1 overflow-y-auto p-2 space-y-2 scrollbar">
                {% for message in messages %}
                    {% if message.sender.id == app.user.id %}
                        <div class="flex justify-end">
                            <div>
                                <small class="text-gray-300 text-xs">{{ message.sentAt|date('d/m/Y H:i', 'Europe/Paris') }}</small>
                                <div class="bg-accent-secondary text-white p-3 rounded-md max-w-xs">
                                    <p class="text-sm">{{ message.content }}</p>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="flex justify-start">
                            <div>
                                <small class="text-gray-500 text-xs">{{ message.sentAt|date('H:i') }}</small>
                                <div class="bg-secondary text-dynamic p-3 rounded-md max-w-xs">
                                    <p class="text-sm">{{ message.content }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <div class="p-4 border-t border-quaternary bg-tertiary rounded-b-md">
                {{ form_start(form, {attr: {class: 'flex items-center space-x-2 w-full'}}) }}
                    {{ form_widget(form.message) }}
                    <button type="submit" class="p-2 bg-accent-primary text-white rounded-md">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block loadingSpinner %}
    {{ include('components/spinner/page_spinner.html.twig', {spinnerId: 'loadingPageSpinner'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('messenger_talk_view') }}
{% endblock %}
