{% extends 'base.html.twig' %}

{% block title %}Edit Wallet for {{ wallet.year }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-white shadow-lg rounded-md max-w-lg mx-auto">
            <div class="bg-secondary text-white text-center p-2 rounded-t-md">
                <h1 class="text-xl font-bold text-white">Edit Wallet</h1>
            </div>

            <div class="p-4">
                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-red-100 text-danger rounded">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.month, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.month, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.month) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.currency, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.currency, {attr: {class: 'rounded-md shadow-sm p-2 bg-white'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.currency) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.start_balance, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.start_balance, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.start_balance) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.spending_limit, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.spending_limit, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.spending_limit) }}
                        </div>
                    </div>
                </div>

                <div class="mt-4 flex justify-between">
                    <a href="{{ app.request.headers.get('referer') ?: path('wallet_list') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back
                    </a>
                    <button type="submit" class="text-center font-bold bg-primary hover:bg-primary-hover text-white py-2 px-4 rounded-md">
                        Save Changes
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
