{# TODO AXEL: refacto this by maybe create a Dto that allow us to do transactionCategory.isIncomes #}
{% set incomesTransactionCategoryEnum = constant('App\\Enum\\TransactionCategoryEnum::Incomes') %}

<div class="p-1 rounded" x-data="{ open: true }">
    <div id="monthlyBill">
        <div class="flex justify-between items-center bg-secondary text-white rounded-t-md p-2">
            <div class="flex items-center">
                <h2 class="text-md font-bold text-white">{{ transactionCategory.type|capitalize }}</h2>
            </div>

            <div class="flex space-x-2">
                <button type="button"
                        data-action-url="{{ path('delete_transactions_from_category', {year: wallet.year, month: wallet.month, category: transactionCategory.type}) }}"
                        class="js-delete-transactions-from-category-button bg-danger px-2 py-1 rounded-md">
                    <i class="fa-solid fa-trash text-white text-xs"></i>
                    <span class="text-white text-xs">Delete</span>
                </button>
                <button @click="open = !open" class="bg-primary text-white px-2 py-1 rounded-md">
                    <span x-show="!open" class="text-white text-xs">Expand</span>
                    <span x-show="open" class="text-white text-xs">Collapse</span>
                </button>
            </div>
        </div>

        <div class="grid {{ transactionCategory.totalBudget ? 'grid-cols-2' : 'grid-cols-1' }} gap-1 bg-gray-100 p-2">
            {% if transactionCategory.totalBudget %}
                <div class="flex items-center justify-center bg-primary rounded-md p-2">
                    <i class="fa-solid fa-wallet text-white text-lg mr-2"></i>
                    <div class="text-center">
                        <span class="text-white text-sm block">Budget</span>
                        <span class="text-white text-sm font-bold">{{ wallet.currency.value|currency_symbol }}{{ transactionCategory.totalBudget|number_format(2, '.', ' ') }}</span>
                    </div>
                </div>
            {% endif %}

            <div class="flex items-center justify-center {{ transactionCategory.totalBudget > 0 and transactionCategory.total > transactionCategory.totalBudget ? 'bg-danger' : 'bg-primary' }} rounded-md p-2">
                <i class="fa-solid fa-coins text-white text-lg mr-2"></i>
                <div class="text-center">
                    <span class="text-white text-sm block">Actual</span>
                    <span class="text-white text-sm font-bold">{{ wallet.currency.value|currency_symbol }}{{ transactionCategory.total|number_format(2, '.', ' ') }}</span>
                </div>
            </div>
        </div>

        <div x-show="open" class="transition-all duration-300" :class="{'rounded-b-md': !open}">
            <div class="flex bg-accent">
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Date</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Tags</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Nature</span></div>
                {# TODO AXEL: refacto this by maybe create a Dto that allow us to do transactionCategory.isIncomes #}
                {% if not (transactionCategory.type|is_transaction_category(incomesTransactionCategoryEnum)) %}
                    <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Budget</span></div>
                {% endif %}
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Actual</span></div>
                {# TODO AXEL: refacto this by maybe create a Dto that allow us to do transactionCategory.isIncomes #}
                {% if not (transactionCategory.type|is_transaction_category(incomesTransactionCategoryEnum)) %}
                    <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Remaining</span></div>
                {% endif %}
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Actions</span></div>
            </div>

            {% for transactions in transactionCategory %}
                {% for transaction in transactions %}
                    <div class="flex {{ cycle(['bg-accent', 'bg-tertiary'], loop.index) }}">
                        <div class="w-full flex items-center justify-center">
                            <span class="p-2 text-xs">{{ transaction.transaction.date ? transaction.transaction.date|date('d M Y') : '-' }}</span>
                        </div>
                        <div class="w-full text-center m-1 flex items-center justify-center">
                            <div class="flex flex-wrap space-y-2">
                                {% if transaction.transaction.tag|length > 0 %}
                                    {% for tag in transaction.transaction.tag %}
                                        <span class="inline-block bg-secondary text-white px-2 py-1 rounded-md text-xs" style="background-color: {{ tag.color }};">#{{ tag.name }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span>-</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="w-full flex items-center justify-center">
                            <span class="{{ transaction.transaction.nature ? 'font-bold' : '' }} text-center text-xs">{{ transaction.transaction.nature ?? '-' }}</span>
                        </div>
                        {# TODO AXEL: refacto this by maybe create a Dto that allow us to do transactionCategory.isIncomes #}
                        {% if not (transactionCategory.type|is_transaction_category(incomesTransactionCategoryEnum)) %}
                            <div class="w-full flex items-center justify-center m-2">
                                <span class="w-full flex flex-col items-center justify-center">
                                    {% if transaction.budgetInfo.budget %}
                                        <span class="text-xs text-dark font-semibold">
                                            {{ transaction.budgetInfo.budget }}
                                        </span>
                                    {% else %}
                                        <span>-</span>
                                    {% endif %}
                                </span>
                            </div>
                        {% endif %}
                        <div class="w-full flex items-center justify-center">
                            <span class="w-full flex items-center justify-center text-xs">{{ transaction.transaction.amount }}</span>
                        </div>
                        {# TODO AXEL: refacto this by maybe create a Dto that allow us to do transactionCategory.isIncomes #}
                        {% if not (transactionCategory.type|is_transaction_category(incomesTransactionCategoryEnum)) %}
                            <div class="w-full flex items-center justify-center">
                                {% if transaction.budgetInfo.budget %}
                                    {% if transaction.budgetInfo.overBudget %}
                                        <span class="w-full flex items-center justify-center text-xs text-danger bg-accent rounded-md p-0.5 border border-red-500 font-bold">
                                            {{ transaction.budgetInfo.remaining|number_format(2, '.', ' ') }}
                                        </span>
                                    {% else %}
                                        <div class="text-center">
                                            <div class="w-full flex flex-col items-center justify-center bg-accent rounded-md p-0.5 border border-green-500">
                                                <span class="font-bold text-xs text-success">{{ transaction.budgetInfo.remaining|number_format(2, '.', ' ') }}</span>
                                                <span class="text-xs text-success">({{ transaction.budgetInfo.percentageUsed|number_format(2, '.', ' ') }}% used)</span>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <span>-</span>
                                {% endif %}
                            </div>
                        {% endif %}
                        <div class="w-full flex flex-col items-center justify-center m-2 space-y-2">
                            <a href="{{ path('transaction_edit_for_wallet', {year: transaction.transaction.wallet.year, month: transaction.transaction.wallet.month, id: transaction.transaction.id}) }}" class="w-full">
                                <button type="button" class="w-full text-center font-bold bg-secondary hover:bg-secondary-hover text-white py-1.5 px-1 cursor-pointer rounded-md">
                                    <i class="fa-solid fa-pen-to-square text-xs"></i>
                                </button>
                            </a>

                            <button type="button" data-action-url="{{ path('transaction_delete', {year: transaction.transaction.wallet.year, month: transaction.transaction.wallet.month, id: transaction.transaction.id}) }}" class="w-full js-delete-button text-center font-bold bg-danger hover:bg-danger-hover text-white py-1.5 px-1 cursor-pointer rounded-md">
                                <i class="fa-solid fa-trash-can text-xs"></i>
                            </button>
                        </div>

                    </div>
                {% endfor %}
            {% else %}
                <div class="flex bg-accent rounded-b-md">
                    <div class="w-full text-center border border-solid border-gray-300 p-2">
                        <span class="font-bold">No {{ transactionCategory.type }}</span>
                    </div>
                </div
            {% endfor %}
        </div>
    </div>

    <div class="bg-secondary p-2 rounded-b-md"></div>
</div>
