<div class="p-1 rounded" x-data="{ open: true }">
    <div id="monthlyBill">
        <div class="flex justify-between items-center bg-secondary text-white rounded-t-md p-2">
            <h2 class="text-xl font-bold text-white">{{ transactionCategory.type|capitalize }}</h2>
            <button @click="open = !open" class="bg-primary text-white px-2 py-1 rounded-md">
                <span x-show="!open" class="text-white text-xs">Expand</span>
                <span x-show="open" class="text-white text-xs">Collapse</span>
            </button>
        </div>

        <div x-show="open" class="transition-all duration-300" :class="{'rounded-b-md': !open}">
            <div class="flex bg-white">
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Date</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Tags</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Nature</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Budget</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Actual</span></div>
                <div class="w-full text-center bg-primary"><span class="font-bold text-white text-xs">Actions</span></div>
            </div>

            {% for transactions in transactionCategory %}
                {% for transaction in transactions %}
                    <div class="flex {{ cycle(['bg-white', 'bg-quaternary'], loop.index) }}">
                        <div class="w-full flex items-center justify-center">
                            <span class="p-2 text-xs">{{ transaction.transaction.date ? transaction.transaction.date|date('d M Y') : '-' }}</span>
                        </div>
                        <div class="w-full flex items-center justify-center m-2 flex-wrap">
                            {% if transaction.transaction.tag|length > 0 %}
                                {% for tag in transaction.transaction.tag %}
                                    <span class="bg-secondary text-white p-1 rounded-md text-xs mb-1" style="background-color: {{ tag.color }};">#{{ tag.name }}</span>
                                {% endfor %}
                            {% else %}
                                <span>-</span>
                            {% endif %}
                        </div>
                        <div class="w-full flex items-center justify-center">
                            <span class="font-bold text-center text-xs">{{ transaction.transaction.nature }}</span>
                        </div>
                        <div class="w-full flex items-center justify-center m-2">
                            <span class="w-full flex flex-col items-center justify-center">
                                {% if transaction.budgetInfo.budget %}
                                    <span class="bg-primary text-xs text-white p-1 w-full text-center rounded-t-md">{{ transaction.budgetInfo.budget }}</span>
                                    <small class="text-xs text-white p-1 w-full text-center rounded-b-md {{ transaction.budgetInfo.overBudget ? 'bg-danger' : 'bg-success' }}">
                                        {% if transaction.budgetInfo.overBudget %}
                                            Over: {{ transaction.budgetInfo.remaining|number_format(2, '.', ' ') }}
                                        {% else %}
                                            Left: {{ transaction.budgetInfo.remaining|number_format(2, '.', ' ') }} ({{ transaction.budgetInfo.percentageUsed|number_format(2, '.', ' ') }}%)
                                        {% endif %}
                                    </small>
                                {% else %}
                                    <span>-</span>
                                {% endif %}
                            </span>
                        </div>
                        <div class="w-full flex items-center justify-center">
                            <span class="w-full flex items-center justify-center text-xs">{{ transaction.transaction.amount }}</span>
                        </div>
                        <div class="w-full flex items-center justify-center space-x-2 mr-2">
                            <a href="{{ path('transaction_edit_for_wallet', {year: transaction.transaction.wallet.year, month: transaction.transaction.wallet.month, id: transaction.transaction.id}) }}">
                                <button type="button" class="text-center font-bold bg-secondary hover:bg-secondary-hover text-white py-1 px-2 cursor-pointer rounded-md">
                                    <i class="fa-solid fa-pen-to-square text-xs"></i>
                                </button>
                            </a>
                            <button type="button" data-action-url="{{ path('transaction_delete', {year: transaction.transaction.wallet.year, month: transaction.transaction.wallet.month, id: transaction.transaction.id}) }}" class="js-delete-button text-center font-bold bg-danger hover:bg-danger-hover text-white py-1 px-2 cursor-pointer rounded-md">
                                <i class="fa-solid fa-trash-can text-xs"></i>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="flex bg-white rounded-b-md">
                    <div class="w-full text-center border border-solid border-gray-300 p-2">
                        <span class="font-bold">No {{ transactionCategory.type }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="flex bg-white rounded-b-md">
        <div class="rounded-bl-md w-full text-center p-2 bg-primary">
            <span class="font-bold text-white text-xs">Total</span>
        </div>
        <div class="rounded-br-md w-full text-center p-2 flex items-stretch">
            <div class="w-full flex items-center justify-between text-xs bg-quaternary text-dark rounded-md font-bold p-1">
                <span class="bg-secondary text-white text-left px-2 py-1 w-1/6 h-full flex items-center justify-center rounded-md">
                    {{ wallet.currency.value|currency_symbol }}
                </span>
                <span>{{ transactionCategory.total|number_format(2, '.', ' ') }}</span>
            </div>
        </div>
    </div>
</div>
