{% extends 'base.html.twig' %}

{% block title %}Wallet list {{ parent() }}{% endblock %}

{% set page_requires_wallet_list = true %}

{% block body %}
    <div class="{{ calendar is not empty ? '' : 'flex justify-center items-center' }}">
        {% if calendar is not empty %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-1">
                {% for year in calendar.getYears() %}
                    <div class="p-1 rounded-md mb-4">
                        <div class="text-center bg-secondary rounded-t-md">
                            <h2 class="text-md font-bold p-2 text-white">{{ year.getYear() }}</h2>
                        </div>
                        <div class="w-full rounded-b-md p-2 bg-accent">
                            <div class="grid grid-cols-3 gap-1 relative">
                                {% for month in year.getMonths() %}
                                    <div class="relative" x-data="{ hover: false }" @mouseenter="hover = true" @mouseleave="hover = false">
                                        <a href="{{ path('monthly_wallet', {id: month.getWalletId(), year: year.getYear(), month: month.getMonthNumber()}) }}"
                                           class="block text-sm font-bold py-2 px-4 rounded-md bg-secondary text-white hover:bg-secondary-hover text-center mb-1">
                                            {{ month.getMonthName() }}
                                        </a>
                                        <button type="button"
                                                data-action-url="{{ path('delete_monthly_wallet', {year: year.getYear(), month: month.getMonthNumber(), redirectTo: 'wallet_list'}) }}"
                                                class="js-delete-wallet-button absolute -top-2 -right-2 w-5 h-5 bg-red-500 text-white rounded-full flex items-center justify-center text-xs hover:bg-red-700 shadow-lg z-10"
                                                x-show="hover" x-transition.opacity>
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center bg-accent p-6 rounded-md shadow-md w-full max-w-md">
                <img src="{{ asset('media/logo.png') }}" alt="logo" class="w-full rounded-md mb-4">
                <h2 class="text-xl font-bold mb-4">Welcome!</h2>
                <p class="mb-4">It looks like you don't have any wallets yet. Why not create your first one?</p>
                <a href="{{ path('wallet_new') }}" class="text-center font-bold bg-primary hover:bg-primary-hover text-white py-2 px-4 rounded-md">
                    Create your first wallet
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
