<div class="flex justify-end mb-4">
    <div>
        {% if navigationPreviousWallet %}
            <a href="{{ path('account_wallet_dashboard', {
                year: currentYear,
                month: navigationPreviousWallet.getMonthNumber(),
                accountId: account.id,
                walletId: navigationPreviousWallet.getWalletId()
            }) }}" class="bg-quaternary hover:bg-quaternary-hover text-white border-solid border border-quaternary-ring py-2 px-4 rounded-md font-bold mr-2 text-xs">
                <i class="fa-solid fa-chevron-left"></i> Previous
            </a>
        {% else %}
            <span class="bg-quaternary hover:bg-quaternary-hover text-senary border-solid border border-quaternary-ring py-2 px-4 rounded-md font-bold cursor-not-allowed mr-2 text-xs">
            <i class="fa-solid fa-chevron-left"></i> Previous
        </span>
        {% endif %}

        <span class="bg-quaternary border-solid border border-quaternary-ring text-xs text-white text-center font-bold rounded-md py-2 px-4">{{ wallet.getMonth()|month_name }} {{ wallet.getYear() }}</span>

        {% if navigationNextWallet %}
            <a href="{{ path('account_wallet_dashboard', {
                year: currentYear,
                month: navigationNextWallet.getMonthNumber(),
                account: account.id,
                wallet: navigationNextWallet.getWalletId()
            }) }}" class="bg-quaternary hover:bg-quaternary-hover text-white border-solid border border-quaternary-ring py-2 px-4 rounded-md font-bold text-xs">
                Next <i class="fa-solid fa-chevron-right"></i>
            </a>
        {% else %}
            <span class="bg-quaternary hover:bg-quaternary-hover text-senary border-solid border border-quaternary-ring py-2 px-4 rounded-md font-bold cursor-not-allowed text-xs">
            Next <i class="fa-solid fa-chevron-right"></i>
        </span>
        {% endif %}
    </div>
</div>
