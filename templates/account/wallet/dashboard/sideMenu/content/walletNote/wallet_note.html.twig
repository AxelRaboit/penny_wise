{% set notesModalContent %}
    {% if notesFromWallet|length > 0 %}
        {% for note in notesFromWallet %}
            <div class="flex flex-col bg-senary border border-gray-300 mb-4 p-2 rounded-md shadow">
                <div class="w-full">
                    <div class="flex justify-between items-center mb-2">
                        <p class="font-bold text-sm text-dynamic">{{ note.title }}</p>
                        <div class="flex space-x-2">
                            <a href="#" class="bg-secondary hover:bg-secondary-hover text-dynamic py-2 px-3 rounded-md">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <a href="#" class="bg-danger hover:bg-danger-hover text-dynamic py-2 px-3 rounded-md">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>
                    </div>
                    <p class="text-sm text-dynamic">{{ note.message }}</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="text-center p-4 bg-tertiary border border-solid border-quaternary rounded-md">
            <span class="font-bold text-sm text-dynamic">No notes</span>
        </div>
    {% endif %}
{% endset %}

{{ include('components/rightSideMenu/rightSideMenu.html.twig', {
    rightSideMenuId: 'js-wallet-side-menu-note',
    rightSideMenuTitle: 'Notes',
    rightSideMenuContent: notesModalContent,
    rightSideMenuCloseButtonId: 'js-right-side-menu-wallet-note-close-button'
}) }}
