{% extends 'base.html.twig' %}

{% block title %}Edit Transaction - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('account_wallet_dashboard_transaction_edit') }}
    {{ encore_entry_link_tags('transaction_fields') }}
{% endblock %}

{% block body %}
    <div id="account-wallet-dashboard-transaction-edit-page" class="hidden max-w-screen-xxl mx-auto">
        <div class="bg-secondary shadow-lg rounded-md max-w-lg mx-auto border border-quaternary border-solid">
            {{ include('transaction/partials/form/_title.html.twig', {
                title: 'Edit Transaction',
            }) }}

            <div class="p-6">
                {{ form_start(form) }}

                {{ include('transaction/partials/form/_fields.html.twig') }}

                {{ include('transaction/partials/form/_action_buttons.html.twig', {
                    submit_label: 'Save changes',
                    cancel_label: 'Cancel',
                }) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block loadingSpinner %}
    {{ include('components/spinner/page-spinner.html.twig', {spinnerId: 'loadingPageSpinner'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('account_wallet_dashboard_transaction_edit') }}
    {{ encore_entry_script_tags('transaction_fields') }}
{% endblock %}
