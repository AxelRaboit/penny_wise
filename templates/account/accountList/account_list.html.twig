{% extends 'base.html.twig' %}

{% block title %}Account list - {{ parent() }}{% endblock %}

{% set page_requires_account_list = true %}

{% block body %}
    <div id="account-list-page" class="hidden">
        <div class="container mx-auto max-w-screen-xl w-full">
            <div class="{{ accounts is not empty ? '' : 'flex justify-center items-center' }}">
                {% if accounts is not empty %}
                    {{ include('account/accountList/part/_list.html.twig', {accounts: accounts}) }}
                {% else %}
                    {{ include('account/accountList/part/_welcome.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block loadingSpinner %}
    {{ include('components/spinner/page-spinner.html.twig', {spinnerId: 'loadingPageSpinner'}) }}
{% endblock %}

{% block sidemenu %}
    {{ include('account/accountList/sideMenu/test.html.twig') }}

    {{ include('components/sideMenu/buttons.html.twig', {
        buttons: [
            {id: 'openAccountListSideMenuTestModal', icon: 'fa-book', title: 'Notes'}
        ]
    }) }}
{% endblock %}
