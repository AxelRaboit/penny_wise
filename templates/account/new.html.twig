{% extends 'base.html.twig' %}

{% block title %}New Account {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-accent shadow-lg rounded-md max-w-lg mx-auto">
            <div class="bg-secondary text-white text-center p-2 rounded-t-md">
                <h1 class="text-md font-bold text-white">Add a New Account</h1>
            </div>

            <div class="p-4">
                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-red-100 text-danger rounded-md">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="flex flex-col mb-2">
                    {{ form_label(form.name, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                    {{ form_widget(form.name, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mt-4 flex justify-between">
                    <a href="{{ app.request.headers.get('referer') ?: path('account_list') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back
                    </a>
                    <button type="submit" class="text-center font-bold bg-secondary hover:bg-secondary-hover text-white py-2 px-4 rounded-md">
                        Add Account
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
