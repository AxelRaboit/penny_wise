{% extends 'base.html.twig' %}

{% block title %}Update Account - {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-secondary rounded-md max-w-lg mx-auto border border-quaternary border-solid border">
            <div class="bg-tertiary text-dynamic text-center p-2 rounded-t-md border-b border-quaternary border-solid">
                <h1 class="text-sm font-bold text-dynamic">Update Account</h1>
            </div>

            <div class="p-4">
                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-danger text-dynamic rounded-md">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.name, null, {label_attr: {class: 'text-dynamic text-sm'}}) }}
                        {{ form_widget(form.name, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm'}}) }}
                        <twig:InputHelper>The name of the account has to be unique.</twig:InputHelper>
                        <div class="text-danger text-sm mt-1">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.priority, null, {label_attr: {class: 'text-dynamic text-sm'}}) }}
                        {{ form_widget(form.priority, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm'}}) }}
                        <twig:InputHelper>Set priority for the account to be displayed first in the list. Higher the priority is, higher the account will be displayed first.</twig:InputHelper>
                        <div class="text-danger text-sm mt-1">
                            {{ form_errors(form.priority) }}
                        </div>
                    </div>
                </div>
                <div class="mt-4 flex justify-between">
                    <twig:BackButton />
                    <twig:Cta
                        color="accent-primary"
                        size="xs"
                        label="Update account"
                        buttonType="submit"
                    />
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
