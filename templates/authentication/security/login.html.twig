{% extends 'base_no_topbar.html.twig' %}

{% block title %}Login {{ parent() }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-senary p-8 rounded-md shadow-lg w-full max-w-md">
            <h1 class="text-xl font-bold text-center text-gray-700 mb-6">PENNY WISE</h1>

            <form method="post">
                {% if error %}
                    <div class="bg-red-100 border border-red-400 text-danger px-4 py-3 rounded-md relative mb-4">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="space-y-2">
                    <div>
                        <label for="username" class="hidden"></label>
                        <input placeholder="Email" type="email" value="{{ last_username }}" name="_username" id="username" class="w-full p-3 border border-gray-300 rounded-md" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <label for="password" class="hidden"></label>
                        <input placeholder="Password" type="password" name="_password" id="password" class="w-full p-3 border border-gray-300 rounded-md" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded-md">
                            <label for="_remember_me" class="ml-2 block text-sm text-gray-600">Remember me</label>
                        </div>
                        <a href="#" class="text-sm text-gray-600 hover:underline">Forgot password?</a>
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="w-full bg-secondary text-white p-3 rounded-md hover:bg-secondary-hover">
                            Login
                        </button>
                    </div>
                </div>

                <div class="mt-4 text-right">
                    <a href="{{ path('app_register') }}" class="text-sm text-gray-600 hover:underline ml-2">Don't have an account? Register</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
