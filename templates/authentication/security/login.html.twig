{% extends 'base_no_topbar.html.twig' %}

{% block title %}Login - {{ parent() }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center">
        <h1 class="text-xl font-bold text-center text-white mb-4">Sign in to Penny Wise</h1>
        <div class="bg-tertiary p-8 rounded-md shadow-lg w-full max-w-md">
            <form method="post">
                {% if error %}
                    <div class="bg-danger text-white px-4 py-3 rounded-md relative mb-4">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="space-y-2">
                    <div>
                        <label for="username" class="text-white no-asterisk">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full p-3 bg-secondary border-quaternary border-solid border rounded-md text-white" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <label for="password" class="text-white no-asterisk">Password</label>
                        <input type="password" name="_password" id="password" class="w-full p-3 bg-secondary border-quaternary border-solid border rounded-md text-white" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 bg-secondary border-quaternary border-solid border rounded-md">
                            <label for="_remember_me" class="ml-2 block text-sm text-accent-secondary">Remember me</label>
                        </div>
                        <a href="#" class="text-sm text-accent-secondary hover:underline">Forgot password?</a>
                    </div>
                    <div class="mt-6">
                        <twig:Cta
                            color="accent-primary"
                            size="md"
                            label="Login"
                            buttonType="submit"
                            fullWidth="true"
                            extraClasses="p-2"
                        />
                    </div>
                </div>

                <div class="mt-4 text-right">
                    <span class="text-white text-sm">New to Penny Wise?</span><a href="{{ path('app_register') }}" class="text-sm text-accent-secondary hover:underline ml-2">Create an account</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
