<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
        <div class="p-1 rounded mb-4">
            <div id="monthlyMonth">
                <div class="text-center bg-secondary rounded-t">
                    <h2 class="text-2xl font-bold p-2 text-white">{{ budget.month|month_name }} {{ yearWithMonths.getYear() }}</h2>
                </div>
                <div class="w-full bg-secondary rounded-b p-2 bg-white">
                    <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
                        {% for month in yearWithMonths.getMonths() %}
                            <a href="{{ path('monthly_budget', { 'year': yearWithMonths.getYear(), 'month': month.getMonthNumber() }) }}"
                               class="text-sm font-bold py-2 px-4 rounded
                       {% if month.getMonthNumber() == currentMonth %}
                           bg-primary text-white hover:bg-primary-hover
                       {% else %}
                           bg-secondary text-white hover:bg-secondary-hover
                       {% endif %}">
                                {{ month.getMonthName() }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="p-1 rounded mb-4">
            <div>
                <div class="text-center bg-secondary rounded-t">
                    <h2 class="text-2xl font-bold p-2 text-white">Actions</h2>
                </div>

                <div class="w-full bg-secondary rounded-b p-2 bg-white">
                    <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
                        {# TODO: the button is about prefill the form with the current month to rapidly add transactions for the current budget #}
                        <a href="{{ path('transaction_new') }}" class="text-center font-bold bg-secondary hover:bg-secondary-hover text-white p-2 cursor-pointer rounded">
                            <i class="fa-solid fa-plus mr-1"></i>
                            Month transaction
                        </a>
                        {# TODO: the button is about prefill the form with the current year to rapidly add budgets for the current year #}
                        <a href="{{ path('budget_new') }}" class="text-center font-bold bg-secondary hover:bg-secondary-hover text-white p-2 cursor-pointer rounded">
                            <i class="fa-solid fa-plus mr-1"></i>
                            Year budget
                        </a>
                        {# TODO: the button is about prefill the form with the current user to rapidly add notifications for the current budget #}
                        <a href="#" class="text-center font-bold bg-secondary hover:bg-secondary-hover text-white p-2 cursor-pointer rounded">
                            <i class="fa-solid fa-plus mr-1"></i>
                            Notification
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="p-1 rounded">
                <div class="text-center bg-secondary p-2 rounded-t">
                    <h2 class="text-2xl font-bold text-white">Left to spend</h2>
                </div>
                <div class="pb-4 bg-white rounded-b">
                    {{ render_chart(leftToSpendChart) }}
                </div>
            </div>
            <div class="p-1 rounded">
                <div class="text-center bg-secondary p-2 rounded-t">
                    <h2 class="text-2xl font-bold text-white">Total spending</h2>
                </div>
                <div class="pb-4 bg-white rounded-b">
                    {{ render_chart(totalSpendingForCurrentAndPreviousNthMonthsChart) }}
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="p-1 rounded mb-4">
            <div id="monthlyOverview">
                <h2 class="rounded-t text-center text-2xl font-bold p-2 bg-secondary text-white">Overview</h2>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Currency</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span>{{ budget.currency|currency_symbol }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Start Date</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span>{{ budget.startDate|date('d M Y') }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">End Date</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span>{{ budget.endDate|date('d M Y') }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white rounded-b">
                    <div class="rounded-bl w-full text-center bg-primary p-2"><span class="font-bold text-white">Start Balance</span></div>
                    <div class="rounded-br w-full text-center border border-solid border-gray-300 p-2"><span><span class="font-bold text-xl text-secondary">{{ budget.currency|currency_symbol }}</span> {{ budget.startBalance }}</span></div>
                </div>
            </div>
        </div>

        <div class="p-1 rounded">
            <div id="monthlyOverview">
                <h2 class="rounded-t text-center text-2xl font-bold p-2 bg-secondary text-white">Cash Flow</h2>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Start Balance</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-secondary mr-1">+</span><span>{{ budget.startBalance }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Incomes</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-secondary mr-1">+</span><span>{{ totalIncomes }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Bills</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-danger mr-1">-</span><span>{{ totalBills }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Expenses</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-danger mr-1">-</span><span>{{ totalExpenses }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white">
                    <div class="rounded-bl w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold">Debts</span></div>
                    <div class="rounded-br w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-danger mr-1">-</span><span>{{ totalDebts }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white rounded-b">
                    <div class="w-full text-center p-2 bg-secondary"><span class="font-bold text-white">Total spending</span></div>
                    <div class="w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-xl text-secondary">{{ budget.currency|currency_symbol }}</span> <span>{{ totalSpending }}</span></div>
                </div>
                <div class="flex flex-col md:flex-row bg-white rounded-b">
                    <div class="rounded-bl w-full text-center p-2 bg-primary"><span class="font-bold text-white">Left</span></div>
                    <div class="rounded-br w-full text-center border border-solid border-gray-300 p-2"><span class="font-bold text-xl text-secondary">{{ budget.currency|currency_symbol }}</span> <span>{{ totalRemaining }}</span></div>
                </div>
            </div>
        </div>
    </div>

    <div class="p-1 rounded">
        <div class="text-center bg-secondary p-2 rounded-t">
            <h2 class="text-2xl font-bold text-white">Last {{ lastNthNotifications|length }} notifications</h2>
        </div>
        <div class="bg-white rounded-b">
            {% for notification in lastNthNotifications %}
                <div class="flex flex-col md:flex-row bg-white border border-solid border-gray-300 {{ loop.last ? 'rounded-b' : '' }}">
                    <div class="p-2">
                        <p class="font-bold">{{ notification.title }}</p>
                        <span>{{ notification.message }}</span>
                    </div>
                </div>
            {% else %}
                <div class="flex bg-white rounded-b">
                    <div class="w-full text-center p-2 bg-white rounded-b"><span class="font-bold text-primary">No notifications</span></div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

