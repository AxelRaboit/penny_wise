{% extends 'base.html.twig' %}

{% block title %}New Budget {{ parent() }}{% endblock %}

{% block body %}
    <div class="container mx-auto my-8">
        <div class="bg-white shadow-lg rounded max-w-lg mx-auto"> <!-- Limiter la largeur avec max-w-lg et centrer avec mx-auto -->
            <div class="bg-secondary text-white text-center py-4 rounded-t">
                <h1 class="text-xl font-bold text-white">Add a New Budget</h1>
            </div>

            <div class="p-4">
                {{ form_start(form) }}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.year, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.year, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.month, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.month, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.start_date, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.start_date, {attr: {class: 'rounded-md shadow-sm p-2 bg-white'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.end_date, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.end_date, {attr: {class: 'rounded-md shadow-sm p-2 bg-white'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.currency, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.currency, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.start_balance, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.start_balance, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.spending_limit, null, {'label_attr': {'class': 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.spending_limit, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>
                </div>

                <button type="submit" class="mt-5 rounded w-full text-center p-2 bg-secondary hover:bg-secondary-hover text-white">
                    Add Budget
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
