{% extends 'base.html.twig' %}

{% block title %}New Budget {{ parent() }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="grid grid-cols-2 gap-2">
            <div class="flex flex-col mb-2">
                {{ form_label(form.year) }}
                {{ form_widget(form.year) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.month) }}
                {{ form_widget(form.month) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.start_date) }}
                {{ form_widget(form.start_date) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.end_date) }}
                {{ form_widget(form.end_date) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.currency) }}
                {{ form_widget(form.currency) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.start_balance) }}
                {{ form_widget(form.start_balance) }}
            </div>

            <div class="flex flex-col mb-2">
                {{ form_label(form.spending_limit) }}
                {{ form_widget(form.spending_limit) }}
            </div>
        </div>

        <button type="submit" class="mt-5 rounded w-full text-center p-2 bg-secondary hover:bg-secondary-hover text-white">Add Budget</button>
    {{ form_end(form) }}
{% endblock %}
