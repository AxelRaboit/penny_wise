{% extends 'base.html.twig' %}

{% block title %}Profile {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-white shadow-md rounded-md p-6 max-w-4xl mx-auto">
            <div class="flex items-center">
                <div class="w-24 h-24 rounded-full overflow-hidden">
                    {% if app.user.userInformation and app.user.userInformation.avatarName %}
                        <img src="{{ asset('uploads/avatars/' ~ app.user.userInformation.avatarName) }}" alt="Avatar" class="w-full h-full rounded-full">
                    {% else %}
                        <img src="{{ asset('media/logo.png') }}" alt="Default Avatar" class="w-full h-full rounded-full">
                    {% endif %}
                </div>
                <div class="ml-6">
                    {% if app.user.userInformation and app.user.userInformation.firstname and app.user.userInformation.lastname %}
                        <h1 class="text-xl font-bold text-gray-800">{{ app.user.userInformation.firstname }} {{ app.user.userInformation.lastname }}</h1>
                    {% else %}
                        <h1 class="text-xl font-bold text-gray-800">User</h1>
                    {% endif %}
                    <p class="text-gray-600">{{ app.user.email }}</p>
                </div>
            </div>

            <div class="mt-6">
                <h2 class="text-xl font-semibold text-gray-800">Profile Information</h2>
                <div class="mt-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 p-4 rounded-md">
                            <h3 class="font-semibold text-gray-700">First Name</h3>
                            <p class="text-gray-800">{{ app.user.userInformation.firstname ?? 'N/A' }}</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-md">
                            <h3 class="font-semibold text-gray-700">Last Name</h3>
                            <p class="text-gray-800">{{ app.user.userInformation.lastname ?? 'N/A' }}</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-md">
                            <h3 class="font-semibold text-gray-700">Email</h3>
                            <p class="text-gray-800">{{ app.user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-6 text-right">
                <a href="{{ path('profile_edit') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                    Edit Profile
                </a>
                <a href="{{ path('app_logout') }}" class="bg-danger hover:bg-danger-hover text-white font-bold py-2 px-4 rounded-md ml-2">
                    Logout
                </a>
            </div>
        </div>
    </div>
{% endblock %}
