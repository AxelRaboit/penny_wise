{% extends 'base.html.twig' %}

{% block title %}Edit Profile {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-white shadow-lg rounded-md max-w-lg mx-auto">
            <div class="bg-secondary text-white text-center py-2 rounded-t-md">
                <h1 class="text-md font-bold text-white">Edit profile</h1>
            </div>

            <div class="p-4">
                {{ form_start(form) }}

                <div class="grid grid-cols-1 gap-6">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.email, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.email, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.userInformation.firstname, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.userInformation.firstname, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.userInformation.firstname) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.userInformation.lastname, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.userInformation.lastname, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.userInformation.lastname) }}
                        </div>
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.userInformation.avatarFile, 'Upload New Avatar', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.userInformation.avatarFile, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        <div class="text-danger text-sm">
                            {{ form_errors(form.userInformation.avatarFile) }}
                        </div>

                        {% if app.user.userInformation and app.user.userInformation.avatarName %}
                            <div class="flex items-center mt-4">
                                <img src="{{ asset('uploads/avatars/' ~ app.user.userInformation.avatarName) }}" alt="Current Avatar" class="w-16 h-16 rounded-full mr-4 shadow-md">
                                <div class="flex items-center">
                                    {{ form_widget(form.userInformation.remove_avatar, {attr: {class: 'ml-2'}}) }}
                                    <label for="{{ form.userInformation.remove_avatar.vars.id }}" class="ml-2 text-sm text-danger">Remove current avatar</label>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="mt-4 flex justify-between">
                    <a href="{{ app.request.headers.get('referer') ?: path('app_homepage') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back
                    </a>
                    <button type="submit" class="text-center font-bold bg-primary hover:bg-primary-hover text-white py-2 px-4 rounded-md">
                        Save Changes
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
