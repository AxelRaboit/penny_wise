{% extends 'base.html.twig' %}

{% block title %}Profile {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-white shadow-md rounded-lg p-6 max-w-4xl mx-auto">
            <div class="flex items-center">
                <div class="w-24 h-24 rounded-full overflow-hidden">
                    <img src="{{ asset('media/logo.png') }}" alt="{{ app.user.email }}" class="w-full h-full object-cover">
                </div>
                <div class="ml-6">
                    <h1 class="text-2xl font-bold text-gray-800">{{ app.user.firstname }} {{ app.user.lastname }}</h1>
                    <p class="text-gray-600">{{ app.user.email }}</p>
                </div>
            </div>

            <div class="mt-6">
                <h2 class="text-xl font-semibold text-gray-800">Profile Information</h2>
                <div class="mt-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h3 class="font-semibold text-gray-700">First Name</h3>
                            <p class="text-gray-800">{{ app.user.firstname }}</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h3 class="font-semibold text-gray-700">Last Name</h3>
                            <p class="text-gray-800">{{ app.user.lastname }}</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h3 class="font-semibold text-gray-700">Email</h3>
                            <p class="text-gray-800">{{ app.user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-6 text-right">
                <a href="{{ path('edit_profile') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                    Edit Profile
                </a>
                <a href="{{ path('app_logout') }}" class="bg-danger hover:bg-danger-hover text-white font-bold py-2 px-4 rounded-md ml-2">
                    Logout
                </a>
            </div>
        </div>
    </div>
{% endblock %}
