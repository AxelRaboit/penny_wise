{% extends 'base.html.twig' %}

{% block title %}Edit Profile - {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-secondary shadow-lg rounded-md max-w-lg mx-auto border border-quaternary border-solid">
            <div class="bg-secondary text-center py-2 rounded-t-md border-b border-quaternary border-solid">
                <h1 class="text-sm font-bold text-dynamic">Edit profile</h1>
            </div>
            <div class="p-4 bg-tertiary rounded-b-md">
                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-danger text-dynamic rounded-md">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 gap-2">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                        <div class="flex flex-col mb-2">
                            {{ form_label(form.email, null, {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                            {{ form_widget(form.email, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                            <div class="text-danger text-sm mt-1">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="flex flex-col mb-2">
                            {{ form_label(form.username, null, {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                            {{ form_widget(form.username, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                            <div class="text-danger text-sm mt-1">
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                        <div class="flex flex-col mb-2">
                            {{ form_label(form.userInformation.firstname, null, {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                            {{ form_widget(form.userInformation.firstname, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                            <div class="text-danger text-sm mt-1">
                                {{ form_errors(form.userInformation.firstname) }}
                            </div>
                        </div>
                        <div class="flex flex-col mb-2">
                            {{ form_label(form.userInformation.lastname, null, {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                            {{ form_widget(form.userInformation.lastname, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                            <div class="text-danger text-sm mt-1">
                                {{ form_errors(form.userInformation.lastname) }}
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.userInformation.bio, null, {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                        {{ form_widget(form.userInformation.bio, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                        <div class="text-danger text-sm mt-1">
                            {{ form_errors(form.userInformation.bio) }}
                        </div>
                    </div>
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.userInformation.avatarFile, 'Upload New Avatar', {label_attr: {class: 'text-dynamic font-semibold text-sm'}}) }}
                        {{ form_widget(form.userInformation.avatarFile, {attr: {class: 'rounded-md p-2 border border-solid border-quaternary bg-secondary text-sm text-dynamic'}}) }}
                        <div class="text-danger text-sm mt-1">
                            {{ form_errors(form.userInformation.avatarFile) }}
                        </div>

                        {% if app.user.userInformation and app.user.userInformation.avatarName %}
                            <div class="flex items-center mt-4">
                                <img src="{{ asset('uploads/avatars/' ~ app.user.userInformation.avatarName) }}" alt="Current Avatar" class="w-16 h-16 rounded-full mr-4">
                                <div class="flex items-center">
                                    {{ form_widget(form.userInformation.remove_avatar, {attr: {class: 'ml-2'}}) }}
                                    <label for="{{ form.userInformation.remove_avatar.vars.id }}" class="ml-2 text-danger text-sm">Remove current avatar</label>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="mt-4 flex justify-between">
                    <twig:BackButton />
                    <twig:Cta
                        color="accent-primary"
                        size="xs"
                        label="Save changes"
                        buttonType="submit"
                    />
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
