            <h1 class="font-semibold text-white text-lg mb-4">Friends</h1>

            <div class="flex space-x-4 border-b border-quaternary mb-2">
                {{ include('friends/part/friendList/_friend_list_tab.html.twig') }}
                {{ include('friends/part/addFriend/_add_friend_tab.html.twig') }}
                {{ include('friends/part/friendRequest/_friend_request_tab.html.twig') }}
            </div>

            {{ include('friends/part/friendList/_friend_list_tab_content.html.twig') }}
            {{ include('friends/part/addFriend/_add_friend_tab_content.html.twig') }}
            {{ include('friends/part/friendRequest/_friend_request_tab_content.html.twig') }}
