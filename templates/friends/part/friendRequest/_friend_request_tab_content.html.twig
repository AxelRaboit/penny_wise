<div x-show="activeTab === 'requests'" class="mt-2">
    <ul class="space-y-2">
        {% for request in pendingRequests %}
            <li class="flex items-center justify-between bg-secondary p-2 rounded-md border border-quaternary text-white text-sm">
                <div class="flex justify-between items-center">
                    {% if request.requester.userInformation and request.requester.userInformation.avatarName %}
                        <img src="{{ asset('uploads/avatars/' ~ request.requester.userInformation.avatarName) }}" alt="{{ request.requester.username }}'s avatar" class="w-8 h-8 rounded-full mr-2">
                    {% else %}
                        <img src="{{ asset('media/logo.png') }}" alt="Default Avatar" class="w-8 h-8 rounded-full mr-2">
                    {% endif %}
                    <span class="text-white">{{ request.requester.username }} <span class="text-senary">({{ request.requester.email }})</span></span>
                </div>
                <div class="flex space-x-2">
                    <form action="{{ path('accept_friend_request', {id: request.id}) }}" method="post">
                        <button type="submit" class="bg-accent-primary text-white font-semibold rounded-md px-3 py-1 text-sm">Accept</button>
                    </form>
                    <form action="{{ path('decline_friend_request', {id: request.id}) }}" method="post">
                        <button type="submit" class="bg-danger text-white font-semibold rounded-md px-3 py-1 text-sm">Decline</button>
                    </form>
                </div>
            </li>
        {% else %}
            <li class="text-white text-sm">No pending friend requests.</li>
        {% endfor %}
    </ul>
</div>
