{% if form_errors(form) %}
    <div class="mb-4 p-4 bg-red-100 text-danger rounded">
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div class="flex flex-col mb-2">
        {{ form_label(form.description, 'Description', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
        {{ form_widget(form.description, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
        <div class="text-danger text-sm">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.nature, 'Nature', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
        {{ form_widget(form.nature, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
        <div class="text-danger text-sm">
            {{ form_errors(form.nature) }}
        </div>
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.date, 'Day', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
        {{ form_widget(form.date) }}
        <div class="text-danger text-sm">
            {{ form_errors(form.date) }}
        </div>
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.amount, 'Amount', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
        {{ form_widget(form.amount, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
        <div class="text-danger text-sm">
            {{ form_errors(form.amount) }}
        </div>
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.transactionCategory, 'Transaction Category', {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
        {{ form_widget(form.transactionCategory) }}
        <div class="text-danger text-sm">
            {{ form_errors(form.transactionCategory) }}
        </div>
    </div>
</div>
