<div class="grid grid-cols-1 sm:grid-cols-2 gap-1">
    <div class="flex flex-col">
        {{ form_label(form.nature, 'Nature', {label_attr: {class: 'text-dynamic text-sm'}}) }}
        {{ form_widget(form.nature, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm text-dynamic'}}) }}
        <div class="text-danger text-sm">{{ form_errors(form.nature) }}</div>
    </div>

    <div class="flex flex-col">
        {{ form_label(form.date, 'Day', {label_attr: {class: 'text-dynamic text-sm'}}) }}
        {{ form_widget(form.date, {attr: {class: 'text-sm'}}) }}
        <div class="text-danger text-sm">{{ form_errors(form.date) }}</div>
    </div>

    <div class="flex flex-col">
        {{ form_label(form.amount, 'Amount', {label_attr: {class: 'text-dynamic text-sm'}}) }}
        {{ form_widget(form.amount, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm text-dynamic'}}) }}
        <div class="text-danger text-sm mt-1">{{ form_errors(form.amount) }}</div>
    </div>

    <div id="js-container-budget-and-checkbox" class="flex flex-col space-y-2 justify-center">
        <div id="js-container-budget" class="flex flex-col mb-2">
            {{ form_label(form.budget, 'Budgeted Amount', {label_attr: {class: 'text-dynamic text-sm'}}) }}
            {{ form_widget(form.budget, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm text-dynamic'}}) }}
            <div class="text-danger text-sm mt-1">{{ form_errors(form.budget) }}</div>
        </div>

        {% if form.budgetDefinedThroughAmount is defined %}
            <div class="flex items-center space-x-2">
                {{ form_widget(form.budgetDefinedThroughAmount, {attr: {class: 'rounded-md'}}) }}
                {{ form_label(form.budgetDefinedThroughAmount, 'Use amount as budget', {label_attr: {class: 'text-dynamic'}}) }}
            </div>
            <div class="text-danger text-sm mt-1">{{ form_errors(form.budgetDefinedThroughAmount) }}</div>
        {% endif %}
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.transactionCategory, 'Transaction Category', {label_attr: {class: 'text-dynamic text-sm'}}) }}
        {{ form_widget(form.transactionCategory, {attr: {id: 'transaction_for_wallet_transactionCategory'}}) }}
        <div class="text-danger text-sm mt-1">{{ form_errors(form.transactionCategory) }}</div>
    </div>

    <div class="flex flex-col mb-2">
        {{ form_label(form.tag, 'Tags', {label_attr: {class: 'text-dynamic text-sm'}}) }}
        {{ form_widget(form.tag) }}
        <div class="text-danger text-sm mt-1">{{ form_errors(form.tag) }}</div>
    </div>

    <div class="flex items-center mb-2">
        {{ form_widget(form.highlight, {attr: {class: 'mr-2'}}) }}
        {{ form_label(form.highlight, null, {label_attr: {class: 'text-dynamic text-sm'}}) }}
        <div class="text-danger text-sm mt-1">{{ form_errors(form.highlight) }}</div>
    </div>
</div>

<div class="flex flex-col mb-2">
    {{ form_label(form.comment, 'Comment', {label_attr: {class: 'text-dynamic text-sm'}}) }}
    {{ form_widget(form.comment, {attr: {class: 'rounded-md p-2 bg-secondary border-quaternary border-solid border text-sm text-dynamic'}}) }}
    <div class="text-danger text-sm mt-1">{{ form_errors(form.comment) }}</div>
</div>
