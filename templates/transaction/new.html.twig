{% extends 'base.html.twig' %}

{% block title %}New Transaction {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-white shadow-md rounded-md max-w-lg mx-auto">
            <div class="bg-secondary text-center py-4 rounded-t-md">
                <h1 class="text-xl font-bold text-white">Add a New Transaction</h1>
            </div>

            <div class="p-6">
                {{ form_start(form) }}

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.description, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.description, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.category, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.category, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.date, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.date, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary bg-white'}}) }}
                        {{ form_errors(form.date) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.amount, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.amount, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.amount) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.transactionCategory, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.transactionCategory, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.transactionCategory) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.wallet, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.wallet, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.wallet) }}
                    </div>
                </div>

                <div class="mt-4 flex justify-between">
                    <a href="{{ app.request.headers.get('referer') ?: path('app_homepage') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back
                    </a>
                    <button type="submit" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        Add Transaction
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
