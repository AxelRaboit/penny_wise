{% extends 'base.html.twig' %}

{% block title %}
    New transaction - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mx-auto my-8">
        <div class="bg-white shadow-lg rounded max-w-lg mx-auto"> <!-- Limiter la largeur avec max-w-lg et centrer avec mx-auto -->
            <div class="bg-secondary text-white text-center py-4 rounded-t">
                <h1 class="text-xl font-bold text-white">Add a New Transaction</h1>
            </div>

            <div class="p-4">
                <div class="mb-4">
                    <div class="mb-4">
                        <a href="{{ app.request.headers.get('referer') ?: path('app_homepage') }}" class="inline-block px-4 py-2 bg-primary text-white font-bold rounded hover:bg-primary-hover transition duration-200">
                            <i class="fa-solid fa-arrow-left mr-1"></i> Précédent
                        </a>
                    </div>

                    <div class="bg-warning rounded text-white px-4 py-3" role="alert">
                        <p class="font-bold">Informational message</p>
                        <p class="text-sm">This creation is related to the budget of <span class="font-bold">{{ budget.month|month_name }} {{ budget.year }}</span>.</p>
                    </div>
                </div>

                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex flex-col mb-2">
                        <label for="description" class="text-gray-700 font-semibold">Description</label>
                        {{ form_widget(form.description, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        <label for="category" class="text-gray-700 font-semibold">Category</label>
                        {{ form_widget(form.category, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        <label for="date" class="text-gray-700 font-semibold">Date</label>
                        {{ form_widget(form.date, {attr: {class: 'rounded-md shadow-sm p-2 bg-white'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        <label for="amount" class="text-gray-700 font-semibold">Amount</label>
                        {{ form_widget(form.amount, {attr: {class: 'rounded-md shadow-sm p-2'}}) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        <label for="transactionCategory" class="text-gray-700 font-semibold">Transaction Category</label>
                        {{ form_widget(form.transactionCategory, {attr: {class: 'rounded-md shadow-sm p-2 bg-white'}}) }}
                    </div>
                </div>

                <button type="submit" class="mt-5 w-full text-center py-3 bg-secondary hover:bg-secondary-hover text-white font-bold rounded-md transition duration-200">
                    Add Transaction
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
