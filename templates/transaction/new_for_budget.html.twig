{% extends 'base.html.twig' %}

{% block title %}
    New transaction - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mx-auto my-8">
        <div class="bg-white shadow-lg rounded">
            <div class="bg-secondary text-white text-center py-4 rounded-t">
                <h1 class="text-xl font-bold text-white">Add a New Transaction</h1>
            </div>

            <div class="p-4">
                <div class="mb-4">
                    <div class="mb-4">
                        <a href="{{ app.request.headers.get('referer') ?: path('app_homepage') }}" class="inline-block px-4 py-2 bg-primary text-white font-bold rounded hover:bg-primary-hover transition duration-200">
                            <i class="fa-solid fa-arrow-left mr-1"></i> Précédent
                        </a>
                    </div>

                    <div class="bg-warning rounded text-white px-4 py-3" role="alert">
                        <p class="font-bold">Informational message</p>
                        <p class="text-sm">This creation is related to the budget of <span class="font-bold">{{ budget.month|month_name }} {{ budget.year }}</span>.</p>
                    </div>
                </div>

                {{ form_start(form) }}

                {% if form_errors(form) %}
                    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex flex-col mb-2">
                        {{ form_row(form.description, { 'attr': { 'class': 'form-input rounded-md shadow-sm' } }) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_row(form.category, { 'attr': { 'class': 'form-input rounded-md shadow-sm' } }) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_row(form.date, { 'attr': { 'class': 'form-input rounded-md shadow-sm' } }) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_row(form.amount, { 'attr': { 'class': 'form-input rounded-md shadow-sm' } }) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_row(form.transactionCategory, { 'attr': { 'class': 'form-input rounded-md shadow-sm' } }) }}
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="mt-5 w-full text-center py-3 bg-secondary hover:bg-secondary-hover text-white font-bold rounded-md transition duration-200">
                    Add Transaction
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
