{% extends 'base.html.twig' %}

{% block title %}Dashboard{{ parent() }}{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white shadow-md rounded-md p-6 flex flex-col justify-center items-center">
                <i class="fa-solid fa-wallet text-primary text-4xl mb-4"></i>
                <h2 class="text-lg font-bold text-gray-700 mb-4">Create New Wallet</h2>
                <a href="{{ path('wallet_new') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                    <i class="fa-solid fa-plus mr-1"></i> New Wallet
                </a>
            </div>

            <div class="bg-white shadow-md rounded-md p-6 flex flex-col justify-center items-center">
                <i class="fa-solid fa-money-bill text-primary text-4xl mb-4"></i>
                <h2 class="text-lg font-bold text-gray-700 mb-4">Create New Transaction</h2>
                {% if hasWallet %}
                <a href="{{ path('transaction_new') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                    <i class="fa-solid fa-plus mr-1"></i> New Transaction
                </a>
                {% else %}
                    <span>You need to create a wallet first</span>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
