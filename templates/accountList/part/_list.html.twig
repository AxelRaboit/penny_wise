<div class="flex flex-wrap rounded-md">
    <div class="flex justify-end w-full mb-2">
        <twig:Cta
            color="accent-primary"
            size="sm"
            fullWidth="false"
            route="account_new"
            label="New Account"
            icon="fa-plus"
        />

    </div>
    {% for account in accounts %}
        <div class="w-full p-1 rounded-md bg-secondary mb-2">
            <div class="flex justify-between items-center text-white p-2 rounded-md">
                <div class="flex-1 text-left">
                    <span class="text-lg font-bold text-white">{{ account.getName() }}</span>
                    {% if account.getIdentifier() %}
                        <span class="text-xs text-white bg-quaternary border-solid border border-quaternary-ring p-1 rounded-md ml-1">#{{ account.getIdentifier() }}</span>
                    {% endif %}
                </div>
                <div class="flex items-center space-x-1">
                    <a href="{{ path('account_edit', {account: account.getId()}) }}"
                       class="rounded-md text-senary hover:bg-secondary-hover py-1 px-2">
                        <i class="fa-solid fa-pen text-sm"></i>
                    </a>
                    <button type="button"
                            data-action-url="{{ path('account_delete', {account: account.getId()}) }}"
                            class="js-delete-account-button rounded-md text-senary hover:bg-secondary-hover text-sm py-1 px-2">
                        <i class="fa-solid fa-trash-can text-sm"></i>
                    </button>
                </div>
            </div>

            <div class="flex flex-wrap">
                {% for year in account.getYears() %}
                    <div class="flex-2 lg:flex-1 w-full rounded-md border-quaternary border-solid border m-1">
                        <div class="text-center bg-tertiary rounded-t-md relative" x-data="{ hover: false }" @mouseenter="hover = true" @mouseleave="hover = false">
                            <h2 class="text-md font-bold p-2 text-white">{{ year.getYear() }}</h2>
                            <button type="button"
                                    data-action-url="{{ path('account_year_delete', {account: account.getId(), year: year.getYear()}) }}"
                                    class="js-delete-year-button absolute -top-2 -right-2 w-6 h-6 bg-quaternary hover:bg-quaternary-hover text-white rounded-md flex items-center justify-center text-xs hover:bg-danger-hover shadow-lg z-10"
                                    x-show="hover" x-transition.opacity>
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </div>

                        <div class="w-full rounded-b-md p-2 bg-secondary min-h-[188px]">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-1 relative">
                                {% set months = year.getMonths() %}
                                {% set monthNumbers = months|map(m => m.getMonthNumber())|default([]) %}

                                {% for i in 1..12 %}
                                    {% if i in monthNumbers %}
                                        {% for month in months %}
                                            {% if month.getMonthNumber() == i %}
                                                <div class="relative" x-data="{ hover: false }" @mouseenter="hover = true" @mouseleave="hover = false">
                                                    <twig:Cta
                                                        color="quaternary"
                                                        size="md"
                                                        fullWidth="true"
                                                        route="account_wallet_dashboard"
                                                        :routeParams="{ year: year.getYear(), month: month.getMonthNumber(), account: account.getId(), wallet: month.getWalletId() }"
                                                        label="{{ month.getMonthName() }}"
                                                    />
                                                    <twig:Cta
                                                        color="quaternary"
                                                        size="xs"
                                                        fullWidth="false"
                                                        dataActionUrl="true"
                                                        :routeParams="{ account: account.getId(), year: year.getYear(), month: month.getMonthNumber(), wallet: month.getWalletId(), redirectTo: 'account_list' }"
                                                        icon="fa-trash-can"
                                                        iconPosition="left"
                                                        extraClasses="js-delete-wallet-button absolute -top-2 -right-2 w-6 h-6 flex items-center justify-center z-10"
                                                        title="Delete wallet"
                                                        :alpineAttributes="{ 'x-show': 'hover', 'x-transition.opacity': '' }"
                                                    />
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% else %}
                                        <div class="relative">
                                            <twig:Cta
                                                color="secondary"
                                                size="md"
                                                fullWidth="true"
                                                borderStyle="dashed"
                                                route="account_wallet_add_quick_month"
                                                :routeParams="{ account: account.getId(), yearId: year.getYear(), monthId: i }"
                                                label="{{ i|month_name }}"
                                            />
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="w-full flex-2 lg:flex-1 p-1 rounded-md">
                    <a href="{{ path('account_new_wallet', {account: account.getId()}) }}"
                       class="flex items-center justify-center min-h-[240px] text-white text-center rounded-md p-4 border-dashed border border-quaternary hover:bg-primary-hover h-full">
                        <i class="fa-solid fa-plus text-3xl text-quaternary"></i>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
