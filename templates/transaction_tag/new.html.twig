{% extends 'base.html.twig' %}

{% block title %}New Transaction Tag {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <div class="bg-accent shadow-md rounded-md max-w-lg mx-auto mt-6">
            <div class="bg-secondary text-center py-2 rounded-t-md">
                <h1 class="text-md font-bold text-white">Add a New Transaction Tag</h1>
            </div>

            <div class="p-6">
                {{ form_start(form) }}

                <div class="grid grid-cols-1 gap-1">
                    <div class="flex flex-col mb-2">
                        {{ form_label(form.name, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.name, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="flex flex-col mb-2">
                        {{ form_label(form.color, null, {label_attr: {class: 'text-gray-700 font-semibold'}}) }}
                        {{ form_widget(form.color, {attr: {class: 'rounded-md shadow-sm p-2 border border-gray-300 focus:ring-primary focus:border-primary'}}) }}
                        {{ form_errors(form.color) }}
                    </div>
                </div>

                <div class="mt-4 flex justify-between">
                    <a href="{{ path('transaction_tag_list') }}" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        <i class="fa-solid fa-arrow-left mr-1"></i> Back
                    </a>
                    <button type="submit" class="bg-primary hover:bg-primary-hover text-white font-bold py-2 px-4 rounded-md">
                        Add Tag
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
