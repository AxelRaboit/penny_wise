{% props
    color = 'dynamic-gray',
    size = 'xs',
    extraClasses = '',
    alignment = 'left'
%}

{% set baseClasses = 'my-1' %}
{% set textClasses = html_cva(
    base=baseClasses,
    variants={
        color: {
            dynamic: 'text-dynamic',
            'dynamic-gray': 'text-dynamic-gray',
            jet: 'text-jet',
        },
        size: {
            xs: 'text-xs',
            sm: 'text-sm',
            md: 'text-base',
            lg: 'text-lg',
        },
        alignment: {
            left: 'text-left',
            center: 'text-center',
            right: 'text-right',
        },
    },
) %}

<p class="{{ textClasses.apply({color, size, alignment}) }} {{ extraClasses }}">
    {% block content %}{% endblock %}
</p>
