<div class="bg-primary px-5 py-3">
    <div class="flex items-center justify-between">
        <div class="flex items-center justify-between">
            <div class="text-white font-bold text-xl mr-2">
                SPENDING WISE
            </div>
            <a href="{{ path('app_homepage') }}" class="text-center font-bold text-white px-3 py-2 cursor-pointer rounded bg-secondary hover:bg-secondary-hover">
                <i class="fa-solid fa-house mr-1"></i>
            </a>
        </div>

        <div>
            {% if app.user %}
                <div class="flex items-center justify-between">
                    <div class="block md:hidden mr-5">
                        <button id="js-menu-toggle" class="text-white focus:outline-none">
                            <i class="fa-solid fa-bars text-xl"></i>
                        </button>
                    </div>

                    <div>
                        <button id="userDropdownButton" class="flex items-center text-center p-2 cursor-pointer rounded focus:outline-none">
                            <img src="{{ asset('media/logo.png') }}" alt="{{ app.user.email }}" class="w-8 h-8 rounded-full">
                        </button>
                        <div id="userDropdownMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded shadow-lg z-50">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-t">
                                <i class="fa-solid fa-user mr-1"></i> Profile
                            </a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                <i class="fa-solid fa-screwdriver-wrench mr-1"></i> Admin panel
                            </a>
                            <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-b">
                                <i class="fa-solid fa-right-from-bracket mr-1"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    {{ include('partial/_burger_menu.html.twig') }}
</div>

{% block javascripts %}
    {{ importmap('topbar') }}
{% endblock %}
