<aside id="{{ modalId }}" class="fixed top-0 right-0 w-full md:w-1/3 h-full bg-secondary transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-hidden border-solid border-l border-quaternary-ring" x-data="{ openModal: null }">
    <div class="bg-secondary text-white p-4 flex justify-between items-center border-solid border-b border-quaternary-ring">
        <div class="flex items-center justify-center">
            <h2 class="text-sm font-bold text-white mr-5">{{ modalTitle }}</h2>
        </div>
        <button id="{{ closeModalId }}" class="text-white">
            <i class="fa-solid fa-times text-md"></i>
        </button>
    </div>

    <div class="p-4 h-[calc(100%-4rem)] overflow-y-auto">
        {{ modalContent|raw }}
    </div>
</aside>
