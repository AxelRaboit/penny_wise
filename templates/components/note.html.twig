<div id="noteBubble" class="fixed bottom-4 right-4 bg-secondary hover:bg-secondary-hover text-white py-4 px-5 rounded-full cursor-pointer shadow-lg z-50">
    <i class="fa-solid fa-bell"></i>
</div>

<div id="noteModal" class="fixed top-0 right-0 w-full md:w-1/3 h-full bg-white shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-hidden">
    <div class="bg-secondary text-white p-4 flex justify-between items-center">
        <div class="flex items-center justify-center">
            <h2 class="text-xl font-bold text-white mr-5">Notes</h2>
            <span href="#" class="bg-primary hover:bg-primary-hover text-white py-2 px-3 rounded-md">
                <i class="fa-solid fa-plus"></i>
            </span>
        </div>
        <button id="closeNoteModal" class="text-white hover:text-gray-200">
            <i class="fa-solid fa-times text-xl"></i>
        </button>
    </div>

    <div class="p-4 h-[calc(100%-4rem)] overflow-y-auto">
        {% if notesFromWallet|length > 0 %}
            {% for note in notesFromWallet %}
                <div class="flex flex-col bg-white border border-gray-300 mb-4 p-2 rounded-md shadow">
                    <div class="w-full">
                        <div class="flex justify-between items-center mb-2">
                            <p class="font-bold">{{ note.title }}</p>
                            <div class="flex space-x-2">
                                <a href="#" class="bg-secondary hover:bg-secondary-hover text-white py-2 px-3 rounded-md">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="#" class="bg-danger hover:bg-danger-hover text-white py-2 px-3 rounded-md">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </div>
                        <p>{{ note.message }}</p>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="text-center p-4 bg-gray-100 border border-gray-300 rounded-md">
                <span class="font-bold text-gray-700">No notes</span>
            </div>
        {% endif %}
    </div>
</div>
