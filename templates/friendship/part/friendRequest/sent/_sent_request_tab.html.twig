<button
    @click="activeTab = 'sent_requests'"
    :class="{'relative border-b-2 border-accent-primary text-white font-bold': activeTab === 'sent_requests', 'relative border-b-2 border-transparent text-white': activeTab !== 'sent_requests'}"
    class="py-2 px-4 w-full md:w-auto"
    type="button"
>
    Sent Requests
    {% if sentRequestsCount > 0 %}
        <span class="absolute top-0 right-0 transform translate-x-2 -translate-y-2 bg-accent-secondary text-white text-xs font-bold rounded-full px-2 py-0.5">
            {{ sentRequestsCount }}
        </span>
    {% endif %}
</button>
