<div x-show="activeTab === 'requests'" class="mt-2">
    <ul class="space-y-2">
        {% for request in pendingRequests %}
            <li class="bg-secondary p-2 rounded-md border border-quaternary text-white text-sm flex items-center justify-between">
                <div class="flex items-center space-x-2">
                    {% if request.requester.userInformation and request.requester.userInformation.avatarName %}
                        <img src="{{ asset('uploads/avatars/' ~ request.requester.userInformation.avatarName) }}" alt="{{ request.requester.username }}'s avatar" class="w-8 h-8 rounded-full">
                    {% else %}
                        <img src="{{ asset('media/logo.png') }}" alt="Default Avatar" class="w-8 h-8 rounded-full">
                    {% endif %}
                    <span class="text-white">{{ request.requester.username }} <span class="text-senary">({{ request.requester.email }})</span></span>
                </div>

                <div class="relative" x-data="{ open: false }">
                    <button @click="open = !open" class="bg-secondary text-white px-4 py-2 rounded-md flex items-center space-x-1">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-56 bg-secondary text-white rounded-md z-10">
                        <ul class="text-sm divide-y divide-quaternary border border-quaternary rounded-md">
                            <li class="p-2">
                                <twig:Cta
                                    color="accent-primary"
                                    fullWidth="true"
                                    size="xs"
                                    icon="fa-check"
                                    label="Accept"
                                    title="Accept Request"
                                    route="accept_friend_request"
                                    :routeParams="{ id: request.id }"
                                />
                            </li>
                            <li class="p-2">
                                <twig:Cta
                                    color="danger-outline"
                                    fullWidth="true"
                                    size="xs"
                                    icon="fa-times"
                                    label="Decline"
                                    title="Decline Request"
                                    route="decline_friend_request"
                                    :routeParams="{ id: request.id }"
                                />
                            </li>
                        </ul>
                    </div>
                </div>
            </li>
        {% else %}
            <li class="text-white text-sm text-center">No pending friend requests.</li>
        {% endfor %}
    </ul>
</div>
