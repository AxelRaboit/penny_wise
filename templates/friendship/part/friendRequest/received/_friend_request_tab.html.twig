<button
    @click="activeTab = 'requests'"
    :class="{'relative border-b-2 border-accent-primary text-white font-bold': activeTab === 'requests', 'relative border-b-2 border-transparent text-white': activeTab !== 'requests'}"
    class="py-2 px-4 w-full md:w-auto"
    type="button"
>
    Pending Requests
    {% if pendingRequestsCount > 0 %}
        <span class="absolute top-0 right-0 transform translate-x-2 -translate-y-2 bg-accent-primary text-white text-xs font-bold rounded-full px-2 py-0.5">
            {{ pendingRequestsCount }}
        </span>
    {% endif %}
</button>
